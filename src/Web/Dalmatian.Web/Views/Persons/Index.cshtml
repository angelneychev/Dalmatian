@using Dalmatian.Web.ViewModels.Persons
@using Dalmatian.Web.Infrastructure
@model PersonsAllViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">

    <div class="row justify-content-md-center">
 <div class="col-auto">
            <div class="table-responsive-sm">
                <table class="table table-bordered border-dark rounded-circle">
                    <thead class="table-primary">
                    <tr>
                        <h4>Person Details</h4>

                        <div class="row justify-content-md-center">
                            <div class="col-xl-2">
                                <a href="/Persons?page=@Model.PreviousPage" class="float-left btn btn-info @(Model.PreviousDisable ? "disabled" : string.Empty)">Prev</a>
                            </div>
                        <div class="col-xl-8">
                            <form asp-action="Index" method="POST">
                                <div class="row input-group">
                                    <input type="text" name="search" id="search" class="form-control easy-autocomplete"/>
                                    <div class="input-group-btn">
                                        <input type="submit" class="btn btn-primary" value="Search"/>
                                    </div>
                                </div>
                            </form>
                            </div>
                        <div class="col-xl-2">
                            <a href="/Persons?page=@Model.NextPage" class="float-right btn btn-info @(Model.NextDisable ? "disabled" : string.Empty)">Next</a>
                            </div>
                        </div>
                    </tr>
                    </thead>
                    <thead class="table-primary">
                    <tr>
                        <th valig="top">Name</th>
                        <th valig="top">Country</th>
                        <th valig="top">City</th>
                        <th valig="top">Web site</th>
                        <th valig="top">Phone</th>
                        <th valig="top">Email</th>
                        <th valig="top">Facebook</th>
                        <th valig="top">Twitter</th>
                        <th valig="top">Instagram</th>
                        <th valig="top">Linkedin</th>
                        <th valig="top">Edit</th>
                    </tr>
                    </thead>

                    @foreach (var person in Model.Persons)
                    {
                        <tbody>
                        <tr class="table-bordered bg-white">
                            <td valig="top">
                                <span>
                                    @person.Firstname
                                    @person.Lastname
                                    @person.Middlename
                                </span>
                            </td>
                            <td>@person.Country.GetEnumDisplayName()</td>
                            <td valig="top">@person.City</td>
                            <td valig="top">
                                <a class="" href="@person.Website" target="_blank">@person.Website</a>
                            </td>
                            <td valig="top">@person.Phone</td>
                            <td valig="top">@person.Email</td>
                            <td valig="top">
                                <a class="" href="@person.Facebook" target="_blank">@person.Facebook</a>
                            </td>
                            <td valig="top">
                                <a class="" href="@person.Twitter" target="_blank">@person.Twitter</a>
                            </td>
                            <td valign="top">
                                <a class="" href="@person.Instagram" target="_blank">@person.Instagram</a>
                            </td>
                            <td valign="top">
                                <a class="" href="@person.Linkedin" target="_blank">@person.Linkedin</a>
                            </td>

                            <td valig="top">
                            @if (this.User.IsInRole("Administrator"))
                            {
                                <a class="btn btn-sm btn-primary " asp-action="Edit" asp-controller="Persons" asp-route-id="@person.Id">Edit</a>
                            }
                        </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

