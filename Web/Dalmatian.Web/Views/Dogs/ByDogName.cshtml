</table>
                    <img src="@Model.ImagesUrl" class="rounded" width="450px" alt="@Model.PedigreeName" />


<div class="col-12 alert alert-primary active">
    <h2>@Model.PedigreeName</h2>
</div>
<div class="row alert alert-primary m-auto">
    <div class="col-4">

    </div>
