@using Dalmatian.Web.Infrastructure
@using Dalmatian.Web.ViewModels.Dogs
@model DogsViewModel
@{
    ViewData["Title"] = Model.PedigreeName;
}
<table class="table table-bordered w-auto border-dark">
    <tbody>
    <tr class="table-primary">
        <th>Breed</th>
        <th>Registration type</th>
