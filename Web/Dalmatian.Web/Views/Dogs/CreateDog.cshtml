@using Dalmatian.Data.Models.Enum
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Dalmatian.Web.ViewModels.Dogs.DogCreateInputModel
@{
    this.ViewData["Title"] = "Add the Dog";
    var father = Model.Parents.Where(x => x.SexDog == SexDog.Male).Select(x => new SelectListItem(x.PedigreeName, x.Id.ToString()));
    var mother = Model.Parents.Where(x => x.SexDog == SexDog.Female).Select(x => new SelectListItem(x.PedigreeName, x.Id.ToString()));
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <form method="post" asp-action="CreateDog">
        <div class="form-row">
            <div class="col-md-5 mb-3">
                <label for="PedigreeName"> Dog name for Pedigree</label>
                <input asp-for="PedigreeName" class="form-control" />
                <span asp-validation-for="PedigreeName" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label for="Breed">Breed</label>
                <select asp-for="Breed" asp-items="@Html.GetEnumSelectList<Breed>()" class="form-control"></select>
                <span asp-validation-for="Breed" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label for="SexDog">SexDog</label>
                <select asp-for="SexDog" asp-items="@Html.GetEnumSelectList<SexDog>()" class="form-control">
                    <option value="Select">Select</option>
                </select>
                <span asp-validation-for="SexDog" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label for="Color">Color</label>
                <select asp-for="Color" asp-items="@Html.GetEnumSelectList<Color>()" class="form-control">
                    <option value="Select">Select</option>
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
                <label for="ImagesUrl">Add photo</label>
                <input asp-for="ImagesUrl" class="form-control" />
                <span asp-validation-for="ImagesUrl"></span>
            </div>
            <div class="col-md-5">
                <label for="FatherDogId">Father</label>
                <select asp-for="FatherDogId" asp-items="father" class="form-control"></select>
                <span asp-validation-for="FatherDogId"></span>
            </div>

            <div class="col-md-5">
                <label for="MotherDogId">Mother</label>
                <select asp-for="MotherDogId" asp-items="mother" class="form-control"></select>
                <span asp-validation-for="MotherDogId"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="DateOfBirth">Date of birth</label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth"></span>
            </div>

            <div class="col-md-3">
                <label for="DateOfDeath">Date of death</label>
                <input asp-for="DateOfDeath" class="form-control" />
                <span asp-validation-for="DateOfDeath"></span>
            </div>

            <div class="col-md-3">
                <label for="OwnerName">Owner</label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName"></span>
            </div>
            <div class="col-md-3">
                <label for="BreederName">Breeder</label>
                <input asp-for="BreederName" class="form-control" />
                <span asp-validation-for="BreederName"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" />
    </form>
</div>
<div class="container py-1">
    <h4 class="text-center text-uppercase">Bootstrap 4 modal</h4>
    <button type="button" class="btn btn-primary rounded-0" data-backdrop="false" data-toggle="modal" data-target="#Employee">Add New Employee</button>
    <div class="modal fade" id="Employee" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="needs-validation" novalidate>
                    <div class="modal-header">
                        <h5 class="modal-title text-uppercase text-center">Employee Information</h5>
                        <button type="button" class="close" data-dismiss="modal">×</button>
                    </div>
                    <div class="modal-body">

                        <div class="form-row">
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <label for="firstName">First Name</label>
                                <input id="firstName" type="text" placeholder="First Name" class="form-control" aria-describedby="inputGroupPrepend" required />
                                <div class="invalid-feedback">
                                    Please enter first name.
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6 col-xs-12">
                                <label for="lastName">Last Name</label>
                                <input id="lastName" type="text" placeholder="Last Name" class="form-control" aria-describedby="inputGroupPrepend" required />
                                <div class="invalid-feedback">
                                    Please enter last name.
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-sm-4 col-md-4 col-xs-12">
                                <label for="city">City</label>
                                <input id="city" type="text" placeholder="City" class="form-control" aria-describedby="inputGroupPrepend" required />
                                <div class="invalid-feedback">
                                    Please enter city.
                                </div>
                            </div>
                            <div class="col-sm-4 col-md-4 col-xs-12">
                                <label for="state">State</label>
                                <input id="state" type="text" placeholder="State" class="form-control" aria-describedby="inputGroupPrepend" required />
                                <div class="invalid-feedback">
                                    Please enter state.
                                </div>
                            </div>
                            <div class="col-sm-4 col-md-4 col-xs-12">
                                <label for="country">State</label>
                                <input id="country" type="text" placeholder="Country" class="form-control" aria-describedby="inputGroupPrepend" required />
                                <div class="invalid-feedback">
                                    Please enter country.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger rounded-0" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary rounded-0">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var form = document.getElementById('needs-validation');
            form.addEventListener('submit', function (event) {
                if (form.checkValidity() === false) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        }, false);
    })();
</script> 