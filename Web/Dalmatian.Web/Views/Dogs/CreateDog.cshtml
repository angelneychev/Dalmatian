@using Dalmatian.Data.Models.Enum
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Dalmatian.Web.ViewModels.Dogs.DogCreateInputModel
@{
    this.ViewData["Title"] = "Add the Dog";
    var father = Model.Parents.Where(x => x.SexDog == SexDog.Male).Select(x => new SelectListItem(x.PedigreeName, x.Id.ToString()));
    var mother = Model.Parents.Where(x => x.SexDog == SexDog.Female).Select(x => new SelectListItem(x.PedigreeName, x.Id.ToString()));
    var person = Model.Persons.Select(x => new SelectListItem(x.FullName, x.Id.ToString())).ToList();
}

<h1>@ViewData["Title"]</h1>
<div class="container">
    <form method="post" asp-action="CreateDog" class="alert alert-primary" enctype="multipart/form-data">
        @*<div class="alert alert-primary">*@
            <strong><h3>Basic dog information</h3></strong>
            <hr />
            <div class="form-row">
                <div class="col-md-3">
                    <label for="PedigreeName"> Dog name for Pedigree</label>
                    <input asp-for="PedigreeName" class="form-control" />
                    <span asp-validation-for="PedigreeName" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label for="Breed">Breed</label>

                    <select asp-for="Breed" asp-items="@Html.GetEnumSelectList<Breed>()" class="form-control"></select>
                    <span asp-validation-for="Breed" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label for="SexDog">SexDog</label>
                    <select asp-for="SexDog" asp-items="@Html.GetEnumSelectList<SexDog>()" class="form-control"></select>
                    <span asp-validation-for="SexDog" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label for="Color">Color</label>
                    <select asp-for="Color" asp-items="@Html.GetEnumSelectList<Color>()" class="form-control">
        </select>
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4">
                    <label for="ImagesUrl" class="custom-file-label"> Add photo</label>
                        <input type="file" asp-for="ImagesUrl" name="ImagesUrl" class="custom-file-input" />
                        <span asp-validation-for="ImagesUrl" class="text-danger"></span>
                    
                </div>
                    <div class="col-md-4">
                        <label for="FatherDogId">Father</label>
                        <select asp-for="FatherDogId" asp-items="father" class="form-control">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="FatherDogId"></span>
                    </div>

                    <div class="col-md-4">
                        <label for="MotherDogId">Mother</label>
                        <select asp-for="MotherDogId" asp-items="mother" class="form-control">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="MotherDogId"></span>
                    </div>
                </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="DateOfBirth">Date of birth</label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth"></span>
                </div>

                <div class="col-md-3">
                    <label for="DateOfDeath">Date of death</label>
                    <input asp-for="DateOfDeath" class="form-control" />
                    <span asp-validation-for="DateOfDeath"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="PersonOwnerId" class="control-label"></label>
                    <select asp-for="PersonOwnerId" asp-items="person" class="form-control">
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="PersonOwnerId"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="PersonBreederId" class="control-label"></label>
                    <select asp-for="PersonBreederId" asp-items="person" class="form-control">
                        <option value="">--Select--</option>
                    </select>
                    <span asp-validation-for="PersonBreederId"></span>
                </div>
            </div>
            <hr />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <strong><h3>Breed kennel club register number</h3></strong>
                </div>
                <div class="form-group col-md-6">
                    <strong><h3>Kennel club register number</h3></strong>
                </div>
            </div>
            <hr />
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="ClubNumber">Club register number</label>
                    <input asp-for="ClubNumber" class="form-control" />
                    <span asp-validation-for="ClubNumber"></span>
                </div>

                <div class="col-md-3">
                    <label for="DateOfClubRegister">Date of club register</label>
                    <input asp-for="DateOfClubRegister" class="form-control" />
                    <span asp-validation-for="DateOfClubRegister"></span>
                </div>

                <div class="col-md-3">
                    <label for="RegistrationNumber">Registration kennel club number</label>
                    <input asp-for="RegistrationNumber" class="form-control" />
                    <span asp-validation-for="RegistrationNumber"></span>
                </div>

                <div class="col-md-3">
                    <label for="DateOfRegistrationNumber">Date of kennel club register</label>
                    <input asp-for="DateOfRegistrationNumber" class="form-control" />
                    <span asp-validation-for="DateOfRegistrationNumber"></span>
                </div>
            </div>
            <hr />
            <strong><h3>Health information</h3></strong>
            <hr />
            <div class="form-row">
                <div class="col-md-2">
                    <label for="Baer">Baer test</label>
                    <select asp-for="Baer" asp-items="@Html.GetEnumSelectList<Baer>()" class="form-control">
                    </select>
                    <span asp-validation-for="Baer" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label for="DateOfBaer">Date of baer test</label>
                    <input asp-for="DateOfBaer" class="form-control" />
                    <span asp-validation-for="DateOfBaer" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label for="HipRating">Hip rating test</label>
                    <select asp-for="HipRating" asp-items="@Html.GetEnumSelectList<HipRating>()" class="form-control">
                    </select>
                    <span asp-validation-for="HipRating" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label for="DateOfHipRating">Date of hip rating</label>
                    <input asp-for="DateOfHipRating" class="form-control" />
                    <span asp-validation-for="DateOfHipRating" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label for="ElbowRating">Elbow rating test</label>
                    <select asp-for="HipRating" asp-items="@Html.GetEnumSelectList<ElbowRating>()" class="form-control">
                    </select>
                    <span asp-validation-for="ElbowRating" class="text-danger"></span>
                </div>
                <div class="col-md-2">
                    <label for="DateOfElbowRating">Date of elbow rating</label>
                    <input asp-for="DateOfElbowRating" class="form-control" />
                    <span asp-validation-for="DateOfElbowRating" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <label for="OtherHealthTest">Other health test</label>
                    <textarea asp-for="OtherHealthTest" class="form-control"></textarea>
                    <span asp-validation-for="OtherHealthTest" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <strong><h3>Breeding information</h3></strong>
            <hr />
            <div class="form-row">
                <div class="col-md-3">
                    <label for="HeightUnits">Height units</label>
                    <select asp-for="HeightUnits" asp-items="@Html.GetEnumSelectList<HeightUnits>()" class="form-control">
                    </select>
                    <span asp-validation-for="HeightUnits" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label for="Height">Height</label>
                    <input asp-for="Height" class="form-control" />
                    <span asp-validation-for="Height" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label for="WeightUnits">Weight units</label>
                    <select asp-for="WeightUnits" asp-items="@Html.GetEnumSelectList<WeightUnits>()" class="form-control">
                    </select>
                    <span asp-validation-for="WeightUnits" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label for="Weight">Weight</label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-4">
                    <label for="BreedingStatus">Breeding status</label>
                    <select asp-for="BreedingStatus" asp-items="@Html.GetEnumSelectList<BreedingStatus>()" class="form-control">
                    </select>
                    <span asp-validation-for="BreedingStatus" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="CountryOfOrigin">Country of origin</label>
                    <select asp-for="CountryOfOrigin" asp-items="@Html.GetEnumSelectList<Country>()" class="form-control"></select>
                    <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label for="CountryOfResidence">Country of residence</label>
                    <select asp-for="CountryOfResidence" asp-items="@Html.GetEnumSelectList<Country>()" class="form-control">
                    </select>
                    <span asp-validation-for="CountryOfResidence" class="text-danger"></span>
                </div>
            </div>
        @*</div>*@
        <hr />
        <input type="submit" class="btn btn-primary" />
    </form>
</div>
