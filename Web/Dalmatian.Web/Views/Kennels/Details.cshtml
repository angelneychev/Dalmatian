@using Dalmatian.Web.Infrastructure
@using Dalmatian.Web.ViewModels.Kennels
@model KennelViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class="col-auto">
            <div class="table-responsive-sm">
                <table class="table table-bordered border-dark">
                    <thead class="table-primary">
                        <tr>
                            <h4>Kennel Details</h4>
                        </tr>
                    </thead>
                    <thead class="table-primary">
                        <tr>
                            <th>Name</th>
                            <th>Registration number</th>
                            <th>Date of registration</th>
                            <th>Country</th>
                            <th>City</th>
                            <th>Owner</th>
                            <th>Co Owner</th>
                        </tr>
                    </thead>
                   <tbody>
                            <tr class="table-bordered bg-white">
                                <td valig="top">@Model.Name</td>
                                <td>@Model.RegistrationNumber</td>
                                <td valig="top">@Model.DateOfRegistration.ToShortDateString()</td>
                                <td>@Model.Country.GetEnumDisplayName()</td>
                                <td valig="top">@Model.City</td>
                                <td valign="top">
                                    <span>
                                        @Model.PersonOwner.Firstname
                                        @Model.PersonOwner.Lastname
                                        @Model.PersonOwner.Middlename
                                    </span>
                                </td>
                                <td valign="top">
                                    @if (Model.PersonCoOwnerId != null)
                                    {
                                        <span>
                                            @Model.PersonCoOwner.Firstname
                                            @Model.PersonCoOwner.Lastname
                                            @Model.PersonCoOwner.Middlename
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-primary " asp-action="Edit" asp-controller="Kennels" asp-route-id="@Model.Id">Edit</a>
                            </tr>
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
