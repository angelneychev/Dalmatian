@using Dalmatian.Web.Infrastructure
@model Dalmatian.Web.ViewModels.Persons.PersonViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">

    <div class="row justify-content-md-center">
        <div class="col-auto">
            <div class="table-responsive-sm">
                <table class="table table-bordered border-dark rounded-circle">
                    <thead class="table-primary">
                    <tr>
                        <h4>Person Details</h4>
                    </tr>
                    </thead>
                    <thead class="table-primary">
                    <tr>
                        <th valig="top">Name</th>
                        <th valig="top">Country</th>
                        <th valig="top">City</th>
                        <th valig="top">Web site</th>
                        <th valig="top">Phone</th>
                        <th valig="top">Email</th>
                        <th valig="top">Facebook</th>
                        <th valig="top">Twitter</th>
                        <th valig="top">Instagram</th>
                        <th valig="top">Linkedin</th>
                        <th valig="top">Edit</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="table-bordered bg-white">
                        <td valig="top">
                            <span>
                                @Model.Firstname
                                @Model.Lastname
                                @Model.Middlename
                            </span>
                        </td>
                        <td>@Model.Country.GetEnumDisplayName()</td>
                        <td valig="top">@Model.City</td>
                        <td valig="top">@Model.Website</td>
                        <td valig="top">@Model.Phone</td>
                        <td valig="top">@Model.Email</td>
                        <td valig="top">@Model.Facebook</td>
                        <td valig="top">@Model.Twitter</td>
                        <td valign="top">@Model.Instagram</td>
                        <td valign="top">@Model.Linkedin</td>

                        <td valig="top">
                        @if (this.User.Identity.Name == Model.Email || this.User.IsInRole("Administrator"))
                        {
                            <a class="btn btn-sm btn-primary " asp-action="Edit" asp-controller="Persons" asp-route-id="@Model.Id">Edit</a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-secondary disabled">Edit</a>
                        }
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
